{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" }
  ],
  "surroundingPairs": [
    { "open": "\"", "close": "\"" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" }
  ],
  "wordPattern": "(-?\\d+)|([A-Z_][A-Z0-9_]*)|R[0-7]",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*[A-Z_][A-Z0-9_]*\\s*$",
    "decreaseIndentPattern": "^\\s*(RET|HALT|RTI)\\s*(;.*)?$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*;\\s*region\\b",
      "end": "^\\s*;\\s*endregion\\b"
    }
  }
}
