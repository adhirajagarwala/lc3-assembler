{
  "name": "lc3-assembly",
  "displayName": "LC-3 Assembly Language Support",
  "description": "Syntax highlighting and language support for LC-3 (Little Computer 3) assembly language",
  "version": "1.0.0",
  "publisher": "lc3-assembler",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "lc3",
    "assembly",
    "assembler",
    "little computer",
    "computer architecture"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/lc3-assembler"
  },
  "contributes": {
    "languages": [
      {
        "id": "lc3asm",
        "aliases": [
          "LC-3 Assembly",
          "lc3asm",
          "lc3"
        ],
        "extensions": [
          ".asm",
          ".lc3"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/lc3-light.png",
          "dark": "./icons/lc3-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "lc3asm",
        "scopeName": "source.lc3asm",
        "path": "./lc3asm.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lc3asm",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.19.0"
  },
  "license": "MIT"
}
